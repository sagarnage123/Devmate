{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "rootDir": ".",
        "outDir": "dist",
        "typeRoots": [
            "./types",
            "./node_modules/@types"
        ],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true
    },
    "include": [
        "**/*.ts",
        "**/*.d.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}